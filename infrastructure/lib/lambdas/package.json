{
  "name": "lambda-crud-dynamodb",
  "version": "1.0.0",
  "description": "Lambdas to do operations on DynamoDB",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn && yarn create-dir && yarn pack:create && yarn pack:get-one",
    "create-dir":  "mkdir -p ../../artifacts",
    "pack:create": "zip ../../artifacts/create.zip create.ts node_modules/*",
    "pack:get-one": "zip ../../artifacts/get-one.zip get-one.ts node_modules/*"
  },
  "devDependencies": {
    "@types/node": "^18.0.6"
  },
  "dependencies": {
    "aws-sdk": "^2.1178.0",
    "uuid": "^8.3.2"
  }
}
